{
  "name": "isp-management-server",
  "version": "1.0.0",
  "description": "Backend API for ISP Management System",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon index.js",
    "start": "node index.js",
    "start:production": "NODE_ENV=production node index.js",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:prod": "npx prisma migrate deploy",
    "db:deploy": "npx prisma migrate deploy",
    "db:push": "npx prisma db push",
    "db:sync": "npx prisma migrate deploy || npx prisma db push",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "db:seed": "node prisma/seed.js",
    "db:seed:prod": "NODE_ENV=production node prisma/seed.js",
    "generate-secrets": "node scripts/generate-secrets.js",
    "setup": "npm run generate-secrets && npm run db:generate && npm run db:push",
    "setup:production": "npm run db:generate && npm run db:migrate:prod && npm run db:seed:prod",
    "setup:postgresql": "node ../scripts/setup-postgresql.js",
    "migrate:sqlite-to-postgresql": "node ../scripts/migrate-to-postgresql.js"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/joi": "^17.1.1",
    "@prisma/client": "^6.16.2",
    "@socket.io/redis-adapter": "^8.3.0",
    "@whiskeysockets/baileys": "^7.0.0-rc.3",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "pino": "^8.21.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "redis": "^4.7.1",
    "sharp": "^0.32.6",
    "socket.io": "^4.8.1",
    "validator": "^13.15.15",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "prisma": "^6.16.2"
  }
}
