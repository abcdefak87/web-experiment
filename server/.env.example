# Server Environment Variables
# Copy this file to .env and update with your values

# Server Configuration
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL="file:./dev.db"

# Authentication
# Generate secure JWT secret with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_secret_key_change_this_in_production
JWT_REFRESH_EXPIRES_IN=30d

# WhatsApp Configuration (Optional)
WHATSAPP_SESSION_PATH=./auth_info_baileys
WHATSAPP_QR_PATH=./qr-codes
WHATSAPP_ENABLED=false

# CORS Settings
CLIENT_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Session Configuration
SESSION_SECRET=s3ss10n_s3cr3t_k3y_ch4ng3_th1s_1n_pr0duct10n
SESSION_MAX_AGE=86400000

# SYSTEM IS PHONE-FIRST WITH WHATSAPP-ONLY COMMUNICATION
# NO EMAIL SUPPORT - DO NOT ADD EMAIL FUNCTIONALITY

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# Feature Flags
ENABLE_WHATSAPP=false
DEBUG_MODE=true
SHOW_SQL_LOGS=false

# API Keys (Optional - untuk integrasi eksternal)
GOOGLE_MAPS_API_KEY=
OPENCAGE_API_KEY=

# Monitoring (Optional - untuk production)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
